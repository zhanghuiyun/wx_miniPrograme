/*搜索学校*/
.searchBanner{
	width: 100%;
    height: 40px;
    background-color: #eee;
    position: fixed;
    z-index: 50000;
}
.selectSchool{
    width: 15%;
    height: 40px;
    position: relative;
    float: left;
}
.location{
	width: 30px;
    height: 24px;
    display: inline-block;
    position: absolute;
    top: 50%;
    left: 50%;
    -ms-transform: translate(-50%,-50%);
    -moz-transform: translate(-50%,-50%);
    -webkit-transform: translate(-50%,-50%);
    -o-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
}


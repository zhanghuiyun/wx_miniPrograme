/*引入模板文件样式*/
@import "../templete/templete.wxss";

page{
	background-color: #fafafa;
}
.inline_block{
	display: inline-block;
}
/*地址*/
.fill_address_content{
	font-size: 14px;
	margin-top: 0;
}	
.fill_address_content #J_addressFillContent{
	padding: 0;
    background: #fff;
    margin-bottom: 8px;
}
.fill_address_content .addressInput{
	overflow: hidden;
    border-bottom: 1px solid rgb(240,240,240);
    position: relative;
    height: 40px;
    line-height: 40px;
}
.fill_address_content .left{
	float: left;
	width: 20%;
    text-align: left;
    font-size: 14px;
    color: rgba(0,0,0,0.54);
}
.fill_address_content .right{
	width: 80%;
    text-align: left;
    float: right;
    height: 40px;
}
.fill_address_content .addressInput .right input{
	height: 40px;
	min-height: 40px;
	line-height: 40px;
	display: inline-block;
	width: 100%;
	padding-left: 3px;
}
.fill_address_content .addressArea .right textarea{
	width:100%;
	height:48px;
	padding-top:0px;
	display:inline-block;
	/*border: 1px solid red;*/
	padding-bottom: 0px
}
.fill_address_content .rightarea{
	padding-right: 16px;
	position:relative;
	height: 60px;
}
.fill_address_content .addressArea{
	height: 60px;
	overflow: hidden;
    border-bottom: 1px solid rgb(240,240,240);
    position: relative;
}
/*.fill_address_content .addressArea .right{
	height: 60px;
}*/
.addressArea .left{
	line-height: 40px
}
.left_text{
	padding-left: 16px;
}
.textareaActive{
	color: rgba(0,0,0,0.54);
}
/*期望送达时间*/
.order_time{
	height: 40px;
	line-height: 40px;
	font-size: 14px;
	width: 100%;
	position: relative;
	overflow: hidden;
	background-color: #fff;
	border-bottom: 1px solid rgb(240,240,240);
}
.order_time_titleCon{
	float: left;
	padding-left: 16px;
	color: rgba(0,0,0,0.54);
}
.time-selector{
	float: right;
	padding-right: 16px;
	color: rgba(0,0,0,0.87);
	height: 40px;
}
/*订单留言*/
.submit_addre_txt_area{
	font-size: 14px;
	height: 60px;
	color: rgba(0,0,0,0.87);
	width: 100%;
	position: relative;
	overflow: hidden;
	background-color: #fff;
	border-bottom: 1px solid rgb(240,240,240);
}
.order_message_con{
	float: left;
	color: rgba(0,0,0,0.54);
	height: 60px;
	line-height: 40px;
	width: 20%;
}
.order_message{
	padding-left: 16px;
}
.order_textareaCon{
	float: right;
	width: 80%;
	height: 60px;
	overflow: auto;
}
.order_textareaCon .textarea{
	padding-top: 13px;
	padding-left: 16px;
	position: relative;
	padding-right: 16px;
}
.order_textareaCon textarea{
	height: 48px;
	width: 100%;
}
@media screen and (max-width: 320px) {
	.order_message_con{
		float: left;
		color: rgba(0,0,0,0.54);
		height: 60px;
		line-height: 40px;
		width: 25%;
	}
	.order_textareaCon{
		float: right;
		width: 75%;
		height: 60px;
		overflow: auto;
	}
}
/*支付方式*/
.payType{
	position: relative;
	overflow: hidden;
	font-size: 14px;
}
.payType .title{
	font-size: 12px;
	line-height: 12px;
	padding: 20px 16px 8px 16px;
}
.payType_select{
	background-color: #fff;
	position: relative;
	overflow: hidden;
}
.inline,.offline{
	font-size: 14px;
	color: rgba(0,0,0,0.87);
	padding-left: 16px;
	height: 40px;
	line-height: 40px;
	border-bottom: 1px solid rgb(240,240,240);
	color: rgba(0,0,0,0.54);
}
.payType .radio_pay{
	font-size: 14px;
	transform:scale(0.6);
	float: right;
	padding-right: 10px;
}
.payType .wx-radio-input{
	margin-top: -2px;
}
/*商品列表*/
.goodList{
	background-color: #fff;
	margin: 8px 0;
	width: 100%;
	position: relative;
	overflow: hidden;
	font-size: 14px;
}
.goodList .goodItem{
	position: relative;
	overflow: hidden;
	height: 60px;
	border-bottom: 1px solid rgb(240,240,240);
	padding: 16px 0;
}
.goodList .goodItem:first-child{
	border-top: 1px solid rgb(240,240,240);
}
.goodList .goodLeft{
	width: 60px;
	height: 60px;
	float: left;
	padding-left: 16px;
	margin-right: 16px;
}
.goodRight_title{
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
	padding-right: 16px;
}
.goodList .goodItem .bottom{
	position: absolute;
	bottom: 16px;
	width: 100%;
}
.goodList .goodItem .bottom .good_price{
	color: #f46720;
	padding-left: 92px;
}
.goodList .goodItem .bottom .good_num{
	float: right;
	padding-right: 16px;
}
/*统计*/
.count_total{
	background-color: #fff;
	font-size: 14px;
	position: relative;
	overflow: hidden;
	padding-bottom: 48px;
}
.count_item{
	width: 100%;
	font-size: 14px;
	line-height: 14px;
	padding: 8px 0;
	position: relative;
	overflow: hidden;
}
.count_item:first-child{
	padding-top: 16px;
}
.count_item:last-child{
	padding-bottom: 16px;
}
.item_title{
	float: left;
	padding-left: 16px;
}
.item_price{
	color: #f46720;
	float: right;
	padding-right: 16px;
}
/*页脚提交订单*/
.settlement{
	height: 48px;
	line-height: 48px;
	background: rgba(51,51,51,.9);
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    font-size: 14px;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
}
.settle_num{
	color: #fff;
	float: left;
	font-size: 14px;
	padding-left: 16px;
}
.settle_price{
	color: #fff;
	margin-left: 4px;
}
.settlement .btn{
	width: 38%;
    float: right;
    right: 0;
    display: block;
    background-color:#F46720;
    border:0;
    cursor: pointer;
    color: #fff;
    font-size: 14px;
    height: 48px;
    border-radius: 0;
    line-height: 48px;
}












